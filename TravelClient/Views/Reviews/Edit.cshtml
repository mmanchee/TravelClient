<h1>Edit Info:</h1>
<form action="/Reviews/Details/@(Model.ReviewId)" method="post">
  <label for="city">City</label>
  <input id="city" name="name" type="text" value="@(Model.City)">
  <label for="country">Country</label>
  <input id="country" name="country" type="text" value="@(Model.Country)">
  <label for="rating">Rating</label>
  <input id="rating" name="rating" type="number" value="@(Model.Rating)">
  <label for="details">Review</label>
  <input id="details" name="details" type="text" value="@(Model.Details)">
  <label for="visited">Date Visited</label>
  <input id="visited" name="visited" type="text" value="@(Model.Visited)">
  <button type="submit">Go!</button>
</form>

<a href="/Reviews/Details/@(Model.ReviewId)">
  <p>Return to Details</p>
</a>